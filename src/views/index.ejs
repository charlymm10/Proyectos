<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
  <div class="container">


    <div class="container">
        <!-- comienza el formulario -->
        <div class="col-4">
            <div class="card">
                <div class="card.body">
                    <form action="/add"method="POST">
                        <div class="formGroup">
                            <label for="producto" class="form-label">nombre</label>
                            <input type="text" id="nombre" name="nombre" placeholder="nombre" class="from-control">
                        </div>
                        <div class="formGroup">
                            <label for="producto" class="form-label">empresa</label>
                            <input type="text" id="empresa" name="empresa" placeholder="empresa" class="from-control">
                        </div>
                        <div class="formGroup">
                            <label for="producto" class="form-label">telefono</label>
                            <input type="text" id="telefono" name="telefono" placeholder="telefono" class="from-control">
                        </div>
                        <div class="formGroup">
                            <label for="producto" class="form-label">direccion</label>
                            <input type="text" id="direccion" name="direccion" placeholder="direccion" class="from-control">
                        </div>
                        <div class="formGroup">
                            <label for="producto" class="form-label">correo</label>
                            <input type="text" id="correo" name="correo" placeholder="correo" class="from-control">
                        </div>
                        <button class="btn btn-primary">Registrar</button>
                    </form>

                </div>
            </div>
        </div>


    <div class="col-md-5">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>nombre</th>
                    <th>empresa</th>
                    <th>telefono</th>
                    <th>direccion</th>
                    <th>correo</th>
                    <th>opciones</th>

                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < datos.length; i++){  %>
                    <tr>
                        <td><%= i+1  %></td>
                        <td><%= datos[i].nombre  %></td>
                        <td><%= datos[i].empresa  %></td>
                        <td><%= datos[i].telefono  %></td>
                        <td><%= datos[i].direccion  %></td>
                        <td><%= datos[i].correo  %></td>
                        <td>
                            <!--<a class="btn btn-primary" href="/del/<%= datos[i].id %>">Eliminar</a>-->
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                Eliminar
                            </button>
                            
                            <!-- Modal -->
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

 </div>
</body>
</html>